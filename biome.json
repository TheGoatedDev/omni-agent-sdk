{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["**/dist/**", "**/node_modules/**", "**/.turbo/**", "**/*.d.ts", "**/*.js.map"]
	}
}
